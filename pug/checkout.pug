extends layout/layout.pug

block title
  | Checkout

block content
  section.section
    .container
      h1.normal-title Checkout
      .alert.alert-danger
        span.fa.fa-exclamation-triangle
        |   Alert messaging goes here
      form(action='', method='post')
        .row
          .col-sm-6
            h3.normal-title Billing Information
            a(href='#') Edit Information
            br
            // <a href="#">My Account</a>
            ul.list-unstyled
              li#name
                | George Washington
              li
                | george@washington.com
              li
                | 3-24-1966
              li
                | 1600 W. Pennsylvania St.
              li
                | United States
              li
                | Seattle, WA 90192
          .col-sm-6
            h3.normal-title Delivery Options
            ul.list-unstyled
              li.radio
                label(for='ship')
                  input#ship(type='radio', checked='', name='delivery')
                  strong Ship
              li
                ul.indented-list
                  li#name
                    | George Washington
                  li
                    | 1600 W. Pennsylvania St.
                  li
                    | United States
                  li
                    | Seattle, WA 90192
            ul.list-unstyled
              li.radio
                label(for='pickup')
                  input#pickup(type='radio', name='delivery')
                  strong Pickup
              li
                ul.indented-list
                  li.form-group
                    select.form-control
                      option(value='297') Queen Anne Wine Room
                      option(selected='selected', value='46') Tasting Room
                  li
                    | 19495 144th Ave. NE # 235
                  li
                    | Woodinville, WA 98072
        .row
          .col-sm-12
            h3.normal-title Order Details
            table.shop-table(cellspacing='0')
              thead
                tr
                  th.product-remove(style='width: 40px;')  
                  th.product-name Product
                  th.product-price Price
                  th.product-quantity Quantity
                  th.product-subtotal Total
              tbody
                tr.cart_item
                  td.product-remove
                    a.remove(href='#', title='Remove this item') ×
                  td.product-name(data-title='Product')
                    a(href='#') 2012 Mourvedre
                  td.product-price(data-title='Price')
                    | $35.00
                  td.product-quantity(data-title='Quantity')
                    .quantity
                      input.input-text.qty.text(type='number', value='1', title='Qty', size='4')
                  td.product-subtotal(data-title='Total')
                    | $35.00
                tr.cart_item
                  td.product-remove
                    a.remove(href='#', title='Remove this item') ×
                  td.product-name(data-title='Product')
                    a(href='#') 2011 Phinny Hill Cabernet Sauvignon 
                  td.product-price(data-title='Price')
                    | $35.00
                  td.product-quantity(data-title='Quantity')
                    .quantity
                      input.input-text.qty.text(type='number', value='2', title='Qty', size='4')
                  td.product-subtotal(data-title='Total')
                    | $70.00
                tr
                  td.actions(colspan='6')
                    input.form-control.coupon-text(type='text', placeholder='Coupon Code')
                    button.btn.btn-lg.btn-default Apply Coupon
            .row.bottom-checkout
              .col-sm-5
                h3.normal-title Shipping
                ul.list-unstyled
                  li.radio
                    label
                      input(type='radio', checked='', name='shipping')
                      |  UPS Ground ($19.28)
                  li.radio
                    label
                      input(type='radio', name='shipping')
                      |  UPS 3 Day - 3 day(s) ($31.27)
                  li.radio
                    label
                      input(type='radio', name='shipping')
                      |  UPS Second Day Air - 2 day(s) ($39.95)
                  li.radio
                    label
                      input(type='radio', name='shipping')
                      |  UPS Next Day Air - 1 day(s) ($82.37)
                h3.normal-title Order Notes
                textarea.form-control
              .col-sm-6.col-sm-offset-1.cart-totals
                h3.normal-title Cart Totals
                table.shop-table(cellspacing='0')
                  tbody
                    tr.cart-subtotal
                      th Subtotal
                      td(data-title='Subtotal')
                        | $105.00
                    tr.cart-subtotal
                      th Shipping
                      td(data-title='Subtotal')
                        | $19.28
                    tr.cart-subtotal
                      th Tax
                      td(data-title='Subtotal')
                        | $0.00
                    tr.order-total
                      th Total
                      td(data-title='Total')
                        strong $124.28
                .row
                  .col-sm-12
                    h3.normal-title Payment Details
                    .alert.alert-danger
                      span.fa.fa-exclamation-triangle
                      |   Payment messaging goes here
                    p
                      span.required *
                      |  All purchases are in U.S. Funds. Please verify that the above information is correct then click Place Order below.
                    ul.list-unstyled
                      li.radio
                        label
                          input(type='radio', name='payment-options')
                          strong Credit Card
                      li.radio
                        label
                          input(type='radio', name='payment-options')
                          strong Gift Card
                    .row
                      .col-sm-12
                        label
                          | Credit Card Type 
                          span.required *
                        .form-group
                          select.form-control
                            option(selected='selected', value='') Select Type
                            option(value='DISCOVER') Discover
                            option(value='AMEX') American Express
                            option(value='MASTERCARD') Master Card
                            option(value='VISA') Visa
                    .row
                      .col-sm-12
                        label
                          | Name On Card 
                          span.required *
                        .form-group
                          input.form-control(type='text')
                    .row
                      .col-sm-12
                        label
                          | Credit Card Number 
                          span.required *
                        .form-group
                          input.form-control(type='text')
                    .row
                      .col-sm-4
                        label
                          | Security Code 
                          span.required *
                          a(href='#')
                            span.fa.fa-question-circle
                        .form-group
                          input.form-control(type='text')
                      .col-sm-8
                        label
                          | Expiration date 
                          span.required *
                        .row
                          .col-sm-6
                            .form-group
                              select.form-control
                                option(selected='selected', value='') Select Month
                                option(value='01') January
                                option(value='02') February
                                option(value='03') March
                                option(value='04') April
                                option(value='05') May
                                option(value='06') June
                                option(value='07') July
                                option(value='08') August
                                option(value='09') September
                                option(value='10') October
                                option(value='11') November
                                option(value='12') December
                          .col-sm-6
                            .form-group
                              select.form-control
                                option(selected='selected', value='') Select Year
                                option(value='2016') 2016
                                option(value='2017') 2017
                                option(value='2018') 2018
                                option(value='2019') 2019
                                option(value='2020') 2020
                                option(value='2021') 2021
                                option(value='2022') 2022
                                option(value='2023') 2023
                                option(value='2024') 2024
                                option(value='2025') 2025
                                option(value='2026') 2026
                    .row
                      .col-sm-8
                        label
                          | Gift Card Number 
                          span.required *
                        .form-group
                          input.form-control(type='text')
                      .col-sm-4
                        label
                          | Pin 
                          span.required *
                        .form-group
                          input.form-control(type='text')
                    .row
                      .col-sm-12
                        .checkbox(style='padding-bottom: 12px;')
                          label
                            input(type='checkbox')
                            |  By submitting your order you are agreeing to our 
                            a(href='#') Terms of Use.
                        .proceed-to-checkout
                          a.btn.btn-primary.btn-lg.btn-block(href='#')
                            | Place Your Order 
                            span.fa.fa-arrow-circle-right
                          // <a href="#"><span class="fa fa-arrow-circle-left"></span> Continue Shopping</a>
