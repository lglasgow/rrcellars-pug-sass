extends layout/layout.pug

block title
  | Forgot your password?
  
block content
  section.section
    .container
      .row
        .col-md-6.col-md-offset-3.login-form
          h1.normal-title Forgot your password?
          p
            | Please enter your email address. You will receive a link to create a new password via email.
          .form-group
            label Email Address
            input.form-control(type='text')
          .row
            .col-sm-6
              a.btn.btn-default.btn-lg.btn-block(href='#')
                span.fa.fa-arrow-circle-left
                |  Back
            .col-sm-6
              a.btn.btn-primary.btn-lg.btn-block(href='#') Reset Password
